<div class="page-header">
  <h3>Album #<%= @album.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @album.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/albums" class="btn btn-primary">
        Back
      </a>
      <a href="/albums/<%= @album.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_album/<%= @album.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
